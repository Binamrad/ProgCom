//prints an integer in string format to the specified pointer
def itoa char# outStr int x : {
	int i;
	i 0 =;
	while x i 0 == |; {
		int tmp;
		tmp x 10 % =;
		x 10 /=;
		outStr "0"# tmp(char) + <-;
		i++;
		outStr++;
	}
	outStr 0 <-;
	outStr--;
	i--;
	while i 0 >; {
		char tmpchar;
		tmpchar outStr# =;
		outStr outStr i - # <-;
		outStr i - tmpchar <-;
		i 2 -=;
		outStr--;
	}
	return;
}

//prints a string to the screen
def print char# string : {
	__nosave string;
	asm string;
	"push	ra"
	"call	printStrLn"
	"pop	ra";;
	return;
}


//allocates space on the stack
def salloc int i: int# {
	int# tmp;
	__nosave i;
	asm i;
	"add	sp, sp, r1"
	"sub	r1, sp, r1";
	tmp;
	return tmp;

}