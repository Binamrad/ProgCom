//main function of the program
def main : {
	char# string;
	string 20 salloc$ (char#) =;
	"printing lots of numbers" print$;
	string 12345 itoa$;
	string print$;
	string 54321 itoa$;
	string print$;
	string 4711 itoa$;
	string print$;
